@model PowerteqDTReport.Models.ReportIncidents
@{
	ViewBag.Title = "Incident Report";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@(Html.Partial("_Reports"))

<div class="container">
	<div class="row"><h3>@ViewBag.Title</h3></div>
	@if (Model.Incidents.Count != 0)
	{
		<div class="row">
			<div class="col-sm-3">Description</div>
			<div class="col-sm-3">Start Date</div>
			<div class="col-sm-3">End Date</div>
		</div>
		foreach (var x in Model.Incidents)
		{
			<div class="row">
				<div class="col-sm-3">@x.Description</div>
				<div class="col-sm-3">@x.StartDateTime</div>
				<div class="col-sm-3">@x.EndDateTime</div>
			</div>
		}
	}

</div>

<div>
	@Html.ActionLink("Back to List", "Index")

</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
